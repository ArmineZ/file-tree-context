{
  "name": "file-tree-context",
  "displayName": "File Tree Context",
  "description": "Save your project's file tree into a file between <FileTree> tags on save. Useful for providing context to AI IDE like Cursor (in .cursorrules)",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "publisher": "Arminez",
  "icon": "file-tree-context.png",
  "repository": "https://github.com/ArmineZ/file-tree-context",
  "price": "Free",
  "author": "Armin Ašimović <https://x.com/ArminAsimovic>",
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished","onDidSaveTextDocument"],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "ignore": "^6.0.2"
  }
}
